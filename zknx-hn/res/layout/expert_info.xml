
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="120sp"
	    android:baselineAligned="false"
	    android:orientation="horizontal" >

    	<ImageView
        android:id="@+id/expert_info_photo"
        android:layout_height="match_parent"
        android:layout_width="0sp"
        android:layout_weight="3" />
    
        <LinearLayout
        android:layout_height="match_parent"
	    android:layout_width="0sp"
	    android:layout_weight="2" 
	    android:baselineAligned="false"
	    android:orientation="vertical"
	    android:layout_gravity="center" >
	
	    	<TextView android:id="@+id/expert_info_major"
	        android:layout_width="match_parent"
	        android:layout_height="0sp"
	        android:layout_weight="1" 
	        android:layout_gravity="center|left"
	        android:gravity="center|bottom"
	        android:text="专业" />

	    	<TextView android:id="@+id/expert_info_name"
	        android:layout_width="match_parent"
	        android:layout_height="0sp"
	        android:layout_weight="1" 
	        android:layout_gravity="center|left"
	        android:gravity="center|top"
	        android:text="名字" />

		</LinearLayout>

	</LinearLayout>
    
    <TextView android:id="@+id/expert_info_introduce"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="专家介绍……"
    android:layout_margin="10sp" />
	
    <TextView
        android:textIsSelectable="true"
        android:background="@drawable/tab_button_bg"
        android:text="专家解答"
        style="@style/TitleText" />

    <Button android:id="@+id/expert_info_ask"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:text="向专家提问"
		style="@style/ClassBtn"/>

</LinearLayout>