<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
		<Button
		    android:id="@+id/my_group_message_friend"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/friend_message"
		    android:background="@drawable/menu_title"
		    style="@style/ClassBtn" />
		
		<Button
		    android:id="@+id/my_group_message_all"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/all_message"
		    android:background="@drawable/menu_title"
		    style="@style/ClassBtn" />
		
		<Button
		    android:id="@+id/my_group_message_new"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/new_message"
		    android:background="@drawable/menu_title"
		    style="@style/ClassBtn" />
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/my_group_message_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
		<!-- ADD IN CODE -->
	</LinearLayout>

</LinearLayout>